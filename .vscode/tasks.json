{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "activate",
      "type": "shell",
      "options": {
        "shell": {
          "args": [
            "-i"
          ]
        }
      },
      "command": "micromamba",
      "args": [
        "activate", "pb" // Activate your micromamba environment
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "setup-builddir",
      "dependsOn": "activate",
      "type": "shell",
      "command": "/home/tornikeo/micromamba/envs/pb/bin/meson",
      "args": [
        "setup",
        "builddir",
        "--wipe", // make sure to rebuild from scratch
      ],
    },
    {
      "label": "Build CUDA",
      "type": "shell",
      "dependsOn": [
        "setup-builddir"
      ],
      "command": "/home/tornikeo/micromamba/envs/pb/bin/meson",
      "args": [
        "compile", 
        "-C", "builddir", // Compile in builddir
        "-v", // Verbose compilation
      ],
      "options": {"cwd": "${workspaceFolder}"},
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$meson-gcc"
      ]
    }
  ]
}